generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Brand {
    id        String    @id @default(cuid())
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    name      String
    product   Product[]
}

model Product {
    id            String   @id @default(cuid())
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
    name          String
    price         Int
    stockDuarte   Int
    stockColon    Int
    stockDeposito Int
    codeBar       String
    weight        Int
    image         String

    brand   Brand? @relation(fields: [brandId], references: [id])
    brandId String
}

model ProductOnSale {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    name      String
    price     Int
}

model Sale {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    amount    Int
    payment   String //TODO:crear enum y  definir metodos de pago // cambiar a paymentMethod
    // product   Product[] //TODO:productonsale
}

