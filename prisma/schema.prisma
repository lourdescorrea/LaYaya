generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Brand {
    id        String    @id @default(cuid())
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    name      String
    product   Product[] //one to many
}

model Product {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    name      String
    price     Int
    stock     Int //TODO: actualizar tema stock
    code      Int //TODO: tipo string // renombrar codeBar
    weight    Int

    brand Brand[] //TODO:many to one @relation to product //
    //TODO:brand tipo ID
    sale  Sale[] //TODO:productonsale
}

model Sale {
    id        String    @id @default(cuid())
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    amount    Int
    payment   String //TODO:crear enum y  definir metodos de pago // cambiar a paymentMethod
    product   Product[] //TODO:productonsale
}

